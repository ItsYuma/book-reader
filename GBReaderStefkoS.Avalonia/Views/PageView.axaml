<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="GBReaderStefkoS.Avalonia.Views.PageView">
    <StackPanel x:Name="Book">
        <Button HorizontalAlignment="Left" Click="BackToHome">Retourner à l'accueil</Button>
        <TextBlock x:Name="BookTitle" FontSize="28" HorizontalAlignment="Center"/>
        <TextBlock x:Name="NbPages" HorizontalAlignment="Center"/>
        <TextBlock x:Name="IndexPage" HorizontalAlignment="Center"></TextBlock>
        <TextBlock x:Name="PageText" HorizontalAlignment="Center"/>
        <StackPanel x:Name="ChoiceList" HorizontalAlignment="Center">
            
        </StackPanel>
        <StackPanel x:Name="EndOfStory" IsVisible="False">
            <TextBlock>Vous êtes arrivé à la fin du livre</TextBlock>
            <Button Click="RestartReading">Reprendre la lecture</Button>
        </StackPanel>
        <Button x:Name="GoToPreviousPageButton" HorizontalAlignment="Left" Click="GoToPreviousPage">Retourner à la page précédente</Button>
        <TextBlock x:Name="Error"></TextBlock>
    </StackPanel>
</UserControl>
