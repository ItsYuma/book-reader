<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="GBReaderStefkoS.Avalonia.AddBookUC">
    <Border BorderBrush="Black"
            BorderThickness="2"
            CornerRadius="3"
            Padding="4"
            Margin="4"
            Width="400">
        <DockPanel x:Name="BookData" HorizontalAlignment="Center" Width="400">
            <Button Margin="2" Click="Button_OnClick" HorizontalAlignment="Center">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock x:Name="Author" />
                    <TextBlock x:Name="Title" />
                    <TextBlock x:Name="Isbn" />
                    <TextBlock x:Name="Resume" IsVisible="False" />
                </StackPanel>
            </Button>
        </DockPanel>
    </Border>
</UserControl>
